  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/_sample/index.ts",
      // "preLaunchTask": "tsc: watch - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/_sample_dist/_sample/*"
      ],
      "restart": true,
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
    }
  ]
}