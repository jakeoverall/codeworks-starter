  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "isBackground": true
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "type": "npm",
      "script": "watch-ts",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "isBackground": true
    },
    {
      "type": "npm",
      "script": "build-ts",
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}