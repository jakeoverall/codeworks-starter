{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    // "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "_sample_dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "_sample_dist/@types",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "_sample/**/*"
  ],
  "typeAcquisition": {
    "enable": true
  }
}